{
  "colors": {
    "primary": {
      "yellow": "#fbbf24",
      "amber": "#f59e0b",
      "gold": "#eab308"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%)",
      "hero": "linear-gradient(180deg, rgba(251,191,36,0.15) 0%, rgba(0,0,0,0) 100%)",
      "card": "linear-gradient(135deg, rgba(251,191,36,0.1) 0%, rgba(245,158,11,0.05) 100%)"
    },
    "dark": {
      "900": "#0f0f0f",
      "800": "#1a1a1a",
      "700": "#262626",
      "600": "#404040",
      "500": "#525252"
    },
    "glass": {
      "background": "rgba(255, 255, 255, 0.05)",
      "border": "rgba(255, 255, 255, 0.1)",
      "hover": "rgba(255, 255, 255, 0.08)"
    },
    "accent": {
      "green": "#10b981",
      "blue": "#3b82f6",
      "purple": "#8b5cf6",
      "red": "#ef4444"
    }
  },
  "typography": {
    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
    "scales": {
      "hero": {
        "mobile": "clamp(3rem, 12vw, 5rem)",
        "desktop": "clamp(5rem, 10vw, 8rem)"
      },
      "h1": {
        "mobile": "2.5rem",
        "desktop": "4rem"
      },
      "h2": {
        "mobile": "2rem",
        "desktop": "3rem"
      },
      "h3": {
        "mobile": "1.5rem",
        "desktop": "2rem"
      }
    },
    "weights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "black": 900
    }
  },
  "spacing": {
    "xs": "0.5rem",
    "sm": "1rem",
    "md": "1.5rem",
    "lg": "2rem",
    "xl": "3rem",
    "2xl": "4rem",
    "3xl": "6rem"
  },
  "animation": {
    "durations": {
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "xslow": "800ms"
    },
    "easings": {
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
      "snappy": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    }
  },
  "shadows": {
    "glow": {
      "sm": "0 2px 20px rgba(251, 191, 36, 0.2)",
      "md": "0 4px 40px rgba(251, 191, 36, 0.3)",
      "lg": "0 8px 60px rgba(251, 191, 36, 0.4)"
    },
    "glass": "0 8px 32px rgba(0, 0, 0, 0.2)",
    "card": "0 4px 24px rgba(0, 0, 0, 0.1)"
  },
  "blur": {
    "glass": "10px",
    "background": "100px"
  },
  "borderRadius": {
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "full": "9999px"
  }
}